<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="PxUsage">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupMenuStyle">@style/ToolbarTheme.Popup</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="actionOverflowMenuStyle">@style/ToolbarTheme.Popup</item>
        <item name="materialIconColor">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="android:textColorPrimary">@color/foreground</item>
        <item name="android:textColorPrimaryInverse">@color/background</item>
        <item name="android:textColorSecondary">@color/foregroundSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/backgroundSecondary</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/background</item>
        <item name="android:textColor">@color/background</item>
        <item name="actionDropDownStyle">@style/ToolbarTheme.DropDown</item>
    </style>

    <style name="ToolbarTheme.DropDown" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarTheme.Popup" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/overflow_menu</item>
    </style>


    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="MyCard">
        <item name="background">@color/background</item>
        <item name="android:translationZ" tools:ignore="NewApi">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>