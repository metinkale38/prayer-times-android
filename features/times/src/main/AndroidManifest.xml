<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metinkale.prayer.times">


    <application>
        <activity
            android:name="MainActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/appName"
            android:exported="true">
            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="prayerapp.page.link"
                    android:path="/times"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".fragments.NotificationPopup"
            android:launchMode="singleInstance"
            android:screenOrientation="nosensor"
            android:showOnLockScreen="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />


        <activity
            android:name=".SilenterPrompt"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

        <service android:name=".alarm.AlarmService" />

        <receiver
            android:name=".alarm.AlarmService$AlarmReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.DATE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".alarm.AlarmService$StopAlarmPlayerReceiver" />

        <receiver android:name=".alarm.SilenterReceiver" />

        <receiver android:name=".LocationReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.ACTION_USER_PRESENT" />
            </intent-filter>
        </receiver>

        <receiver android:name=".MiBandToolsReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.metinkale.prayer.MIBANDACTION" />
            </intent-filter>
        </receiver>

    </application>

</manifest>