<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <FrameLayout
        android:id="@+id/padder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="500dp"
        android:paddingTop="200dp" />

    <RelativeLayout
        android:id="@+id/widget_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/padder"
        android:layout_alignRight="@+id/padder"
        android:layout_alignLeft="@+id/padder"
        android:layout_alignTop="@+id/padder"
        android:layout_gravity="center">


        <TextClock
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/greg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/time"
            android:lines="1"
            android:paddingLeft="5dp"
            android:text="Greg"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/hicri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/time"
            android:layout_toRightOf="@+id/greg"
            android:ellipsize="middle"
            android:gravity="right"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:text="Hijri"
            android:textColor="#ffffff" />

        <RelativeLayout
            android:id="@+id/progresscontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hicri"
            android:padding="5dp">

            <FrameLayout
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:paddingLeft="200dp"
                android:paddingTop="5dp" />

            <FrameLayout
                android:id="@+id/progressBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/progress"
                android:background="#ffffff"
                android:paddingLeft="200dp"
                android:paddingTop="5dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/progresscontainer"
            android:layout_below="@+id/progresscontainer"
            android:paddingLeft="5dp"
            android:text="00:00"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/nextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/progresscontainer"
            android:layout_below="@+id/progresscontainer"
            android:paddingRight="5dp"
            android:text="00:00"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/lastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/progresscontainer"
            android:layout_below="@id/lastTime"
            android:paddingLeft="5dp"
            android:text="00:00"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/nextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/progresscontainer"
            android:layout_below="@+id/nextTime"
            android:paddingRight="5dp"
            android:text="00:00"
            android:textColor="#ffffff" />

        <Chronometer
            android:id="@+id/countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/progresscontainer"
            android:layout_centerHorizontal="true"
            android:countDown="true"
            android:gravity="center"
            android:textColor="#ffffff" />


    </RelativeLayout>

</RelativeLayout>